{
    "info": {
        "name": "Time Reporting System - M1-011 User CRUD",
        "description": "Postman collection for testing M1-011 User Management endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api",
            "type": "string"
        },
        {
            "key": "adminToken",
            "value": "YOUR_ADMIN_JWT_TOKEN_HERE",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Login (Get Admin Token)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "if (pm.response.code === 200) {",
                            "    const response = pm.response.json();",
                            "    if (response.success && response.data.token) {",
                            "        pm.collectionVariables.set('adminToken', response.data.token);",
                            "        console.log('Admin token saved:', response.data.token);",
                            "    }",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"mail\": \"admin@timereporting.com\",\n  \"password\": \"Password123!\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/login",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "login"
                    ]
                },
                "description": "Login with admin credentials to get JWT token. Token will be automatically saved to collection variable."
            },
            "response": []
        },
        {
            "name": "GET /api/admin/users (All Users)",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/admin/users",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "users"
                    ]
                },
                "description": "Get all active users (default filter)"
            },
            "response": []
        },
        {
            "name": "GET /api/admin/users?active=true",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/admin/users?active=true",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "users"
                    ],
                    "query": [
                        {
                            "key": "active",
                            "value": "true"
                        }
                    ]
                },
                "description": "Get only active users"
            },
            "response": []
        },
        {
            "name": "GET /api/admin/users?active=false",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/admin/users?active=false",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "users"
                    ],
                    "query": [
                        {
                            "key": "active",
                            "value": "false"
                        }
                    ]
                },
                "description": "Get only inactive (soft-deleted) users"
            },
            "response": []
        },
        {
            "name": "GET /api/admin/users?id=1",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/admin/users?id=1",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "users"
                    ],
                    "query": [
                        {
                            "key": "id",
                            "value": "1",
                            "description": "Get specific user by ID"
                        }
                    ]
                },
                "description": "Get a single user by ID"
            },
            "response": []
        },
        {
            "name": "POST /api/admin/users (Create User)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "if (pm.response.code === 201) {",
                            "    const response = pm.response.json();",
                            "    if (response.success && response.data.id) {",
                            "        pm.collectionVariables.set('newUserId', response.data.id);",
                            "        console.log('New user ID:', response.data.id);",
                            "    }",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Test User\",\n  \"mail\": \"test.user@example.com\",\n  \"password\": \"TestPassword123!\",\n  \"userType\": \"worker\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/admin/users",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "users"
                    ]
                },
                "description": "Create a new user. Returns 201 with user ID on success. Returns 409 if email already exists."
            },
            "response": []
        },
        {
            "name": "POST /api/admin/users (Duplicate Email - Should Fail)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Duplicate User\",\n  \"mail\": \"admin@timereporting.com\",\n  \"password\": \"TestPassword123!\",\n  \"userType\": \"worker\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/admin/users",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "users"
                    ]
                },
                "description": "Try to create user with existing email - should return 409 CONFLICT"
            },
            "response": []
        },
        {
            "name": "PUT /api/admin/users/:id (Update User)",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Updated Test User\",\n  \"mail\": \"updated.user@example.com\",\n  \"userType\": \"admin\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/admin/users/2",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "users",
                        "2"
                    ]
                },
                "description": "Update user details. Password cannot be updated here - use reset-password endpoint instead."
            },
            "response": []
        },
        {
            "name": "PUT /api/admin/users/:id (Set Inactive)",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"active\": false\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/admin/users/2",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "users",
                        "2"
                    ]
                },
                "description": "Deactivate a user by setting active to false"
            },
            "response": []
        },
        {
            "name": "POST /api/admin/users/:id/reset-password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"newPassword\": \"NewPassword123!\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/admin/users/2/reset-password",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "users",
                        "2",
                        "reset-password"
                    ]
                },
                "description": "Reset user password. New password must be at least 6 characters."
            },
            "response": []
        },
        {
            "name": "DELETE /api/admin/users/:id (Soft Delete)",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/admin/users/2",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "users",
                        "2"
                    ]
                },
                "description": "Soft delete a user (sets active = false). User will not appear in default queries but data is preserved."
            },
            "response": []
        },
        {
            "name": "GET /api/admin/users (Verify Soft Delete)",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/admin/users",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "users"
                    ]
                },
                "description": "Query users after soft delete - deleted user should not appear in results"
            },
            "response": []
        }
    ]
}