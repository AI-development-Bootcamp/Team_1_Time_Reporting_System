# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/timereporting?schema=public

# Server
PORT=3000

# Authentication
JWT_SECRET=dev_secret_key_123

# CORS Security (Optional)
# For local development, specify frontend URLs (comma-separated)
LOCAL_CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# For production deployment, specify allowed domains (comma-separated)
# DEPLOY_CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# If CORS origins are not set, the API will allow ALL origins (dev fallback - NOT SECURE for production!)

# Rate Limiting (Optional)
# Auth rate limit window in milliseconds (default: 900000 = 15 minutes)
AUTH_RATE_LIMIT_WINDOW_MS=900000

# Max auth requests per window (default: 5)
AUTH_RATE_LIMIT_MAX_REQUESTS=5
